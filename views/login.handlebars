<div>
    <h2>Sign In</h2>
    <form id="login-user">
        <label for="username" class="login">Username:</label>
        <input type="text" id="username">
        <label for="password" class="login">Password:</label>
        <input type="password" id="password" minlength="8">
        <button type="submit" class="login">Login</button>
    </form>
</div>
<div>
    <h2>Create Account</h2>
    <form id="signup-user">
        <label for="newUsername" class="login">Username (minimum 4 characters): </label>
        <input type="text" id="newUsername" name="newUsername" minlength="4">
        <label for="newEmail" class="login">Email: </label>
        <input type="email" id="newEmail" name="newEmail">
        <label for="newPassword" class="login">Password (at least 8 characters): </label>
        <input type="password" id="newPassword" name="newPassword">
        <button type="submit" class="login">Sign Up</button>
    </form>
</div>


<script src="/js/login.js"></script>